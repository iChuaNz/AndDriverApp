<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/routeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/popover_background"
    android:padding="8dp">

    <TextView
        android:id="@+id/textViewVehicleNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle No"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewRouteName" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRouteName"
        app:srcCompat="@drawable/next_btn" />

    <TextView
        android:id="@+id/textViewRouteStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxEms="3"
        android:text="00:00 AM"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/textViewRouteEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxEms="3"
        android:text="00:00 AM"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/textViewRouteStartLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxEms="5"
        android:maxLines="2"
        android:text="Woodland"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/textViewRouteStartTime"
        app:layout_constraintEnd_toStartOf="@+id/textViewRouteStartTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewRouteStartTime" />

    <TextView
        android:id="@+id/textViewRouteEndLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxEms="5"
        android:maxLines="2"
        android:text="Bus Stop Opp Admiralty Stn (46771), Woodlands Ave 7"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/textViewRouteEndTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewRouteEndTime"
        app:layout_constraintTop_toTopOf="@+id/textViewRouteEndTime" />

    <TextView
        android:id="@+id/textViewRouteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Route name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
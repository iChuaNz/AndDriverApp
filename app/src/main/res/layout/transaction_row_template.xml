<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F2F1EF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="ID"
                android:background="#F68B1F"
                android:textColor="#F2F1EF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Cost"
                android:background="#F68B1F"
                android:textColor="#F2F1EF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Charter Details"
                android:background="#F68B1F"
                android:textColor="#F2F1EF" />

            <TextView
                android:id="@+id/transaction_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Transaction"
                android:background="#F68B1F"
                android:textColor="#F2F1EF" />

            <TextView
                android:id="@+id/txt_dispute_reason_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                android:gravity="center"
                android:padding="5dp"
                android:text="Dispute Reason"
                android:background="#F68B1F"
                android:textColor="#F2F1EF" />

            <TextView
                android:id="@+id/txt_your_reason_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                android:gravity="center"
                android:padding="5dp"
                android:text="Your Reason"
                android:background="#F68B1F"
                android:textColor="#F2F1EF" />

            <TextView
                android:id="@+id/txt_admin_comments_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                android:gravity="center"
                android:padding="5dp"
                android:text="Admin Comments"
                android:background="#F68B1F"
                android:textColor="#F2F1EF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:background="#59595A" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_charter_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="13sp"
                android:paddingStart="5dp"
                android:gravity="center|left"
                android:ellipsize="none"
                android:text="Adhoc_88888888"
                android:layout_weight="1"
                android:scrollHorizontally="false"
                android:singleLine="true" />

            <TextView
                android:id="@+id/txt_charter_cost"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="13sp"
                android:paddingStart="5dp"
                android:gravity="center|left"
                android:ellipsize="none"
                android:text="$88888.88"
                android:layout_weight="1"
                android:scrollHorizontally="false"
                android:singleLine="true" />

            <TextView
                android:id="@+id/txt_charter_details"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:textSize="13sp"
                android:paddingStart="5dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
                android:layout_weight="1"
                android:scrollHorizontally="false" />

            <TextView
                android:id="@+id/txt_transaction_type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="13sp"
                android:paddingStart="5dp"
                android:gravity="center|left"
                android:maxLines="2"
                android:ellipsize="none"
                android:textStyle="bold"
                android:text="Deducted from wallet"
                android:layout_weight="1"
                android:scrollHorizontally="false" />

            <TextView
                android:id="@+id/txt_dispute_reason"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:textSize="13sp"
                android:paddingStart="5dp"
                android:gravity="center|left"
                android:maxLines="2"
                android:ellipsize="none"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
                android:layout_weight="1"
                android:scrollHorizontally="false" />

            <TextView
                android:id="@+id/txt_your_reason"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:textSize="13sp"
                android:paddingStart="5dp"
                android:gravity="center|left"
                android:maxLines="2"
                android:ellipsize="none"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
                android:layout_weight="1"
                android:scrollHorizontally="false" />

            <TextView
                android:id="@+id/txt_admin_comments"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:textSize="13sp"
                android:paddingStart="5dp"
                android:gravity="center|left"
                android:maxLines="2"
                android:ellipsize="none"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
                android:layout_weight="1"
                android:scrollHorizontally="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:background="#59595A" />

        </LinearLayout>

    </LinearLayout>

</TableRow>